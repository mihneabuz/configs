general:
  - <C-hjkl> navigate windows
  - cs horizontal split
  - cv vertical split
  - <C-arrows> resize windows
  - <S-lh> cycle buffers
  - <leader>q close buffer
  - <leader>w close window
  - <leader>h clear highlight
  - <A-jk> move text visual
  - JK<A-jk> move text block visual
  - <leader>r toggle relative

nvimtree:
  - <leader>o toggle
  - <leader>e focus

treesitter:
  - grr rename
  - gnn selection
  - grn increase selection
  - grm decrease selection

lsp:
  - K hover
  - gk signature
  - gd definition
  - gD declaration
  - gi implementation
  - gr references
  - gl line diagnostics
  - [g next diagnostic
  - ]g prev diagnostic
  - <leader>d diagnostics
  - <leader>f format
  - <leader>ca coda action
  - <leader>cl code lens

dap:
  - <leader>DB toggle breakpoint
  - <leader>DD run debugger

tests:
  - <leader>A run all tests
  - <leader>F run all tests in file
  - <leader>T run closest test

telescope:
  - <leader>tt Telescope
  - <leader>tf Telescope files
  - <leader>tg Telescope grep
  - <leader>tc Telescope commands
  - <leader>tv Telescope neovim
  - <leader>tp Telescope projects

bufferline:
  - <leader>b pick buffer
  - <leader>B sort buffers

terminal:
  - <C-\> toggle float term
  - <C-]> toggle bottom term

mergetool:
  - <leader>mt start merge tool
  - <leader>mg diffget
  - <leader>mp diffput

lazy:
  - <leader>L open lazy

mason:
  - <leader>M open mason
